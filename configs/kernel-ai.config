# JARVIS OS - AI-Optimized Kernel Configuration
# This file contains kernel options optimized for AI workloads

# Enable AI/ML related features
CONFIG_CRYPTO_DEV_NITROX=m
CONFIG_CRYPTO_DEV_NITROX_CNN55XX=m
CONFIG_CRYPTO_DEV_QAT=m
CONFIG_CRYPTO_DEV_QAT_DH895xCC=m
CONFIG_CRYPTO_DEV_QAT_C3XXX=m
CONFIG_CRYPTO_DEV_QAT_C62X=m

# Enable GPU support for AI acceleration
CONFIG_DRM_AMDGPU=m
CONFIG_DRM_NOUVEAU=m
CONFIG_DRM_I915=m
CONFIG_DRM_RADEON=m

# Enable CUDA support if available
CONFIG_NVIDIA_GPU=m

# Enable high-performance networking
CONFIG_NET_VENDOR_INTEL=y
CONFIG_IGB=m
CONFIG_IXGBE=m
CONFIG_I40E=m

# Enable high-performance storage
CONFIG_BLK_DEV_NVME=m
CONFIG_NVME_MULTIPATH=y

# Enable real-time features for responsive AI
CONFIG_PREEMPT=y
CONFIG_PREEMPT_VOLUNTARY=y
CONFIG_HIGH_RES_TIMERS=y
CONFIG_NO_HZ_FULL=y

# Enable memory management optimizations
CONFIG_HUGETLBFS=y
CONFIG_HUGETLB_PAGE=y
CONFIG_TRANSPARENT_HUGEPAGE=y
CONFIG_TRANSPARENT_HUGEPAGE_ALWAYS=y

# Enable NUMA optimizations
CONFIG_NUMA=y
CONFIG_NUMA_BALANCING=y

# Enable performance monitoring
CONFIG_PERF_EVENTS=y
CONFIG_DEBUG_FS=y

# Enable audio support for JARVIS voice interface
CONFIG_SND_HDA_INTEL=m
CONFIG_SND_HDA_GENERIC=m
CONFIG_SND_ALSA=m
CONFIG_SOUND=y

# Enable USB audio support
CONFIG_SND_USB_AUDIO=m
CONFIG_SND_USB_HIFACE=m

# Enable Bluetooth for wireless audio
CONFIG_BT=m
CONFIG_BT_HIDP=m
CONFIG_BT_HCIUART=m
CONFIG_BT_HCIUART_H4=y

# Enable power management for efficiency
CONFIG_ACPI=y
CONFIG_CPU_FREQ=y
CONFIG_CPU_FREQ_DEFAULT_GOV_PERFORMANCE=y

# Enable security features
CONFIG_SECURITY=y
CONFIG_SECURITY_SELINUX=y
CONFIG_SECURITY_APPARMOR=y
CONFIG_IMA=y

# Enable virtualization support (for containerized AI workloads)
CONFIG_KVM=m
CONFIG_KVM_INTEL=m
CONFIG_KVM_AMD=m

# Enable container support
CONFIG_CGROUPS=y
CONFIG_CGROUP_FREEZER=y
CONFIG_CGROUP_DEVICE=y
CONFIG_CGROUP_CPUACCT=y
CONFIG_CGROUP_PERF=y

# Enable filesystem optimizations
CONFIG_EXT4_FS=y
CONFIG_XFS_FS=y
CONFIG_BTRFS_FS=y

# Enable networking optimizations
CONFIG_TCP_CONG_BBR=y
CONFIG_NET_SCH_FQ=y

# Enable debugging support (can be disabled in production)
CONFIG_DEBUG_INFO=y
CONFIG_DEBUG_KERNEL=y




